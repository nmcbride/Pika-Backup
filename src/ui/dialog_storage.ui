<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.10"/>
  <requires lib="libadwaita" version="1.4"/>
  <object class="AdwWindow" id="dialog">
    <property name="title" translatable="yes">Backup Location</property>
    <property name="modal">1</property>
    <property name="default-width">370</property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar"/>
        </child>
        <property name="content">
          <object class="AdwPreferencesPage">
            <child>
              <object class="AdwPreferencesGroup" id="disk">
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">Volume</property>
                    <child>
                      <object class="GtkLabel" id="volume">
                        <property name="wrap">1</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="natural-wrap-mode">none</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">Device</property>
                    <child>
                      <object class="GtkLabel" id="device">
                        <property name="wrap">1</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="natural-wrap-mode">none</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">Path</property>
                    <child>
                      <object class="GtkLabel" id="path">
                        <property name="wrap">1</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="natural-wrap-mode">none</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup" id="remote">
                <property name="visible">0</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">URL</property>
                    <child>
                      <object class="GtkLabel" id="uri">
                        <property name="wrap">1</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="natural-wrap-mode">none</property>
                        <property name="selectable">1</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup" id="fs">
                <property name="visible">0</property>
                <property name="title" translatable="yes">Disk Space</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">Total</property>
                    <child>
                      <object class="GtkLabel" id="fs_size">
                        <property name="label">&lt;placeholder&gt;</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">Free</property>
                    <child>
                      <object class="GtkLabel" id="fs_free">
                        <property name="label">&lt;placeholder&gt;</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLevelBar" id="fs_usage">
                    <property name="margin-top">24</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </object>
</interface>
